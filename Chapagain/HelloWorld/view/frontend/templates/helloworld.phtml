<?php
$ids = [1, 2, 15];
$categoryProducts = $block->getProductCollectionByCategories($ids);
foreach ($categoryProducts as $product) {
    echo 'Name: ' . $product->getName() . '<br>';
    echo 'Price: ' . $product->getPrice() . '<br>';
    echo 'Short Description: ' . $product->getShortDescription() . '<br>';
    echo 'Description: ' . $product->getDescription() . '<br>';
    echo 'Product URL: ' . $product->getProductUrl() . '<br>';
    
    // Image URL
    $image = $block->getImageUrl($product, 'product_base_image');
    echo 'Image URL: ' . $image . '<br>';
    
    // Thumbnail Image URL
    $thumbnail = $block->getImageUrl($product, 'product_thumbnail_image');
    echo 'Thumbnail URL: ' . $thumbnail . '<br>';
    
    // Rating
    if ($product->getRatingSummary()) {
        echo 'Rating: ' . $product->getRatingSummary()->getRatingSummary() . '<br>';
    } else {
        echo 'Rating: No ratings available<br>';
    }
    
    echo '<br>';
}
